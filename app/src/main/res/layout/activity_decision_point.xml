<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nimesha.memifyx.decision_point">

    <Button
        android:id="@+id/MemesBtn"
        android:layout_width="140dp"
        android:layout_height="99dp"
        android:text="Memes"
        android:textColor="#FFFFFF"
        android:background="@drawable/decision_button_1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/GettingStartedBtn"
        app:layout_constraintRight_toLeftOf="@+id/MemeUploadBtn"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.863" />

    <Button
        android:id="@+id/TxtRatingBtn"
        android:layout_width="294dp"
        android:layout_height="86dp"
        android:text="Comment Rating"
        android:textColor="#FFFFFF"
        android:background="@drawable/decision_button_2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/MemesBtn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.513" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="signout"
        android:background="@drawable/button_bg_rounded_corners"
        android:textColor="#FFFFFF"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="436dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.578" />

    <Button
        android:id="@+id/MemeUploadBtn"
        android:layout_width="138dp"
        android:layout_height="100dp"
        android:layout_marginRight="46dp"
        android:text="Upload Memes"
        android:textColor="#FFFFFF"
        android:background="@drawable/decision_button_3"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Mem Upload"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/GettingStartedBtn"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/TxtRatingBtn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/GettingStartedBtn"
        android:layout_width="292dp"
        android:layout_height="86dp"
        android:text="Getting Started"
        android:textColor="#FFFFFF"
        tools:text="Getting Started"
        android:background="@drawable/decision_button_5"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/Acheivements"
        android:layout_width="292dp"
        android:layout_height="100dp"
        android:text="Achievements"
        android:textColor="#FFFFFF"
        android:background="@drawable/decision_button_4"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/TxtRatingBtn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        tools:layout_editor_absoluteY="322dp" />

</android.support.constraint.ConstraintLayout>
