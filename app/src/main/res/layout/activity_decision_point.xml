<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nimesha.memifyx.decision_point">

    <TableLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.218">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/GettingStartedBtn"
                android:layout_width="292dp"
                android:layout_height="100dp"
                android:background="@drawable/decision_button_5"
                android:text="Getting Started"
                android:layout_weight="2"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="61dp"
                tools:layout_editor_absoluteY="334dp"
                tools:text="Getting Started" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/MemesBtn"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:background="@drawable/decision_button_1"
                android:text="Memes"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_span="2"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="130dp" />

            <Button
                android:id="@+id/MemeUploadBtn"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:background="@drawable/decision_button_3"
                android:text="Upload Memes"
                android:layout_weight="1"
                android:layout_span="1"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="130dp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="2">

            <Button
                android:id="@+id/TxtRatingBtn"
                android:layout_width="292dp"
                android:layout_height="100dp"
                android:background="@drawable/decision_button_2"
                android:text="Comment Rating"
                android:textSize="20dp"
                android:layout_weight="2"
                android:textColor="#FFFFFF"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="237dp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="2">

            <Button
                android:id="@+id/Acheivements"
                android:layout_width="292dp"
                android:layout_height="100dp"
                android:background="@drawable/decision_button_4"
                android:text="Achievements"
                android:textSize="20dp"
                android:layout_weight="2"
                android:textColor="#FFFFFF"
                tools:layout_editor_absoluteY="329dp"
                tools:layout_editor_absoluteX="8dp" />

        </TableRow>

    </TableLayout>





    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="436dp"
        android:background="@drawable/button_bg_rounded_corners"
        android:text="signout"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp" />




</android.support.constraint.ConstraintLayout>
